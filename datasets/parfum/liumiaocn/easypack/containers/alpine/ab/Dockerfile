FROM alpine:3.10.2

###############################################################################
#MAINTAINER
###############################################################################
MAINTAINER LiuMiao <liumiaocn@outlook.com>

###############################################################################
#ENVIRONMENT VARS
###############################################################################

###############################################################################
#Install
###############################################################################
RUN set -evx -o pipefail                \
    && apk update                       \
    && apk add --no-cache apache2-utils \
    && rm -rf /var/cache/apk/*          \
    && ab -V |grep Version

