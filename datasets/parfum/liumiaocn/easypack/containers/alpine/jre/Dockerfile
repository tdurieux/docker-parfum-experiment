###############################################################################
#
#IMAGE:   JRE
#VERSION: 8.0
#
###############################################################################
FROM alpine:latest

###############################################################################
#MAINTAINER
###############################################################################
MAINTAINER LiuMiao <liumiaocn@outlook.com>

###############################################################################
#ENVIRONMENT VARS
###############################################################################
ENV JAVA_HOME=/usr/lib/jvm/default-jvm/jre

###############################################################################
#install
###############################################################################
RUN apk upgrade --update-cache; \
    apk add openjdk8-jre; \
    rm -rf /tmp/* /var/cache/apk/*


CMD ["java", "-version"]
