###############################################################################
#
#IMAGE:   gcc/g++ 
#VERSION: 9.2.0-r1
#
###############################################################################
FROM alpine:edge

###############################################################################
#MAINTAINER
###############################################################################
MAINTAINER LiuMiao <liumiaocn@outlook.com>

###############################################################################
#ENVIRONMENT VARS
###############################################################################
ARG VERSION_GCC=9.2.0-r1

###############################################################################
#Install
###############################################################################
RUN apk update \
    && apk add --no-cache gcc==${VERSION_GCC} \
    && apk add --no-cache g++==${VERSION_GCC} \
    && rm -rf /var/cache/apk/*

###############################################################################
#Setting
###############################################################################
VOLUME [ "/data/project" ]
WORKDIR /data/project

