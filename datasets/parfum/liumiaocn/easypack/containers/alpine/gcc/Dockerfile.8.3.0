###############################################################################
#
#IMAGE:   gcc/g++ 
#VERSION: 8.3.0-r0
#
###############################################################################
FROM alpine:3.10.2

###############################################################################
#MAINTAINER
###############################################################################
MAINTAINER LiuMiao <liumiaocn@outlook.com>

###############################################################################
#ENVIRONMENT VARS
###############################################################################
ARG VERSION_GCC=8.3.0-r0

###############################################################################
#Install
###############################################################################
RUN apk update \
    && apk add --no-cache gcc==${VERSION_GCC} \
    && apk add --no-cache g++==${VERSION_GCC} \
    && rm -rf /var/cache/apk/*

###############################################################################
#Setting
###############################################################################
VOLUME [ "/data/project" ]
WORKDIR /data/project

###############################################################################
#Entrypoint
###############################################################################
