ENV PATH="/packages/ecat/bin:${PATH}"
LABEL org.nrg.commands="[{\"name\": \"ecat-dump\", \"label\": \"ECAT Dump\", \"description\": \"Runs ECAT dump tool from Turku PET Centre\", \"info-url\": \"http://turkupetcentre.net/programs/\", \"schema-version\": \"1.0\", \"version\": \"1.2\", \"type\": \"docker\", \"image\": \"ecat-dump\", \"command-line\": \"lmhdr /input >> /output/ecat-dump.txt && lshdr /input >> /output/ecat-dump.txt\", \"mounts\": [{\"name\": \"ecat-in\", \"type\": \"input\", \"path\": \"/input\", }, {\"name\": \"dump-out\", \"type\": \"output\", \"path\": \"/output\"}], \"inputs\": [], \"outputs\": [{\"name\": \"dump-out\", \"description\": \"The ECAT file dump\", \"mount\": \"dump-out\", \"path\": \"ecat-dump.txt\", \"required\": true}], \"xnat\": [{\"name\": \"ecat-dump-scan\", \"description\": \"Run the ECAT dump image on an XNAT ECAT scan\", \"contexts\": [\"xnat:imageScanData\"], \"external-inputs\": [{\"name\": \"scan\", \"description\": \"Input scan\", \"type\": \"Scan\", \"required\": true, \"matcher\": \"'ECAT' in @.resources[*].label\"}], \"derived-inputs\": [{\"name\": \"scan-ecat\", \"description\": \"The ecat resource on the scan\", \"type\": \"Resource\", \"derived-from-wrapper-input\": \"scan\", \"matcher\": \"@.label == 'ECAT'\"}, {\"name\": \"scan-ecat-file\", \"description\": \"The files in the ecat resource on the scan\", \"type\": \"File\", \"derived-from-wrapper-input\": \"scan-ecats\", \"provides-files-for-command-mount\": \"ecat-in\", \"matcher\": \"@.name =~ /.*v/\"}], \"output-handlers\": [{\"name\": \"headerdump-resource\", \"accepts-command-output\": \"dump-out\", \"type\": \"Resource\", \"as-a-child-of-wrapper-input\": \"scan\", \"label\": \"HEADERDUMP\"}]}]}]"
