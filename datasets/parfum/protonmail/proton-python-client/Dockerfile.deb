FROM IMAGE_URL_DEB
RUN apt-get update
RUN DEBIAN_FRONTEND="noninteractive" apt-get -y install tzdata

#Â Install a few useful packages

RUN apt-get install -y \
    net-tools \
    apt-utils \
    iproute2 \
    python3 \
    network-manager \
    network-manager-openvpn \
    sudo \
    vim \
    pkg-config \
    iputils-ping \
    openvpn \
    libssl-dev

RUN apt-get install -y \
    dbus-x11 \
    libsecret-tools \
    gnome-keyring

RUN apt-get install -y \
    python3-bcrypt \
    python3-gnupg \
    python3-openssl \
    python3-dnspython \
    python3-requests >= 2.16.0

RUN apt-get install -y \
    python3-pytest \
    python3-pytest-cov

RUN useradd -ms /bin/bash user
RUN usermod -a -G sudo user
RUN echo '%sudo ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers

COPY docker_entry.sh /usr/local/bin
COPY . /home/user/proton-python-client

RUN chown -R user:user /home/user/proton-python-client
WORKDIR /home/user/proton-python-client

ENTRYPOINT ["/usr/local/bin/docker_entry.sh"]
