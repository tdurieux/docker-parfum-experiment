FROM alpine:edge
RUN apk add --no-cache argon2 aspell bison bzip2 curl enchant2 freetds freetype gdbm gettext gmp icu imap krb5 libedit \
libical libjpeg-turbo libpng lmdb oniguruma openssl libsodium libwebp libxml2 libxpm libxslt libzip net-snmp \
sqlite tidyhtml unixodbc zlib php7 apache2 php7-apache2 php7-gd php7-json php7-common php7-curl php7-intl php7-mbstring \
php7-pdo php7-pdo_sqlite php7-sqlite3 php7-xml php7-xmlwriter php7-zip
RUN apk add --no-cache  php7-session php7-ctype

