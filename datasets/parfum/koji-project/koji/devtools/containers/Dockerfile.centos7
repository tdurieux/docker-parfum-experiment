FROM registry.centos.org/centos:7
RUN \
  yum -y update && \
  yum install -y \
    dnf \
    dnf-plugins-core \
    gcc \
    git \
    make \
    krb5-devel \
    libffi-devel \
    openssl-devel \
    pyOpenSSL \
    python-cheetah \
    python-devel \
    python-librepo \
    python-requests \
    redhat-rpm-config \
    rpm-build \
    rpm-python \
    yum-utils && \
  yum install -y epel-release && \
  yum install -y \
    python-flake8 \
    python-multilib \
    python-pip \
    python-psycopg2 \
    python-qpid-proton \
    python-requests-kerberos \
    yumdownloader && \
  yum clean all && \
  pip install -U 'pip==9.0.1' && \
  pip install -U tox
