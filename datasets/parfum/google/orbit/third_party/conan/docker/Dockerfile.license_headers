FROM ubuntu:20.04

RUN useradd -Ums /bin/bash conan && \
    apt-get -qq update && \
    apt-get install -y --no-install-recommends grep git && \
    rm -rf /var/lib/apt/lists/*

USER conan
WORKDIR /home/conan