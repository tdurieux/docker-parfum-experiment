ENV PROJECT_DIR=/tensorflow
WORKDIR ${PROJECT_DIR}

# Add tensorflow/benchmarks
RUN git clone --branch=cnn_tf_v1.12_compatible --depth=1 \
  https://github.com/tensorflow/benchmarks.git

RUN ls -l .

ENTRYPOINT ["/bin/bash"]
