FROM centos
COPY install.sh show-hostname.sh /bin/
RUN chmod +x /bin/install.sh /bin/show-hostname.sh
LABEL INSTALL 'docker run --rm=true --net=host -v /:/host -e NAME=${NAME} -e IMAGE=${IMAGE} -e HOST=/host ${IMAGE} /bin/install.sh'
LABEL "Name"="atomic-test-6"
LABEL RUN_OPTS_FILE '$PWD/docker-run-opts-${NAME}'
LABEL RUN 'docker run --rm=true ${RUN_OPTS} ${IMAGE} /bin/show-hostname.sh'
LABEL STOP 'docker stop $NAME'
