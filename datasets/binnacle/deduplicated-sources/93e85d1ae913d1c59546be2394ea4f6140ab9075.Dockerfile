# If eg. `pacman-key --init' needs more entropy:
RUN pacman -U --noconfirm https://www.archlinux.org/packages/extra/x86_64/haveged/download/ \
    && haveged -w 1024

# If `rankmirrors' is not wanted, provide your preferred mirrors by hand:
RUN printf '# Server list created manually\n\
    \rServer = https://ftp.sh.cvut.cz/arch/$repo/os/$arch\n\
    \rServer = https://arch.32g.eu/$repo/os/$arch\n\
    \rServer = https://mirror.michael-eckert.net/archlinux/$repo/os/$arch' > /etc/pacman.d/mirrorlist
