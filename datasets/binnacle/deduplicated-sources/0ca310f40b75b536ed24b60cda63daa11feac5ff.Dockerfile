###############################################################################
#
#IMAGE:   SVN
#VERSION: 1.10.0
#
###############################################################################
FROM alpine:3.8

###############################################################################
#MAINTAINER
###############################################################################
MAINTAINER LiuMiao <liumiaocn@outlook.com>

###############################################################################
#ENVIRONMENT VARS
###############################################################################


###############################################################################
#Install
###############################################################################
RUN apk update \
    && apk add --no-cache subversion==1.10.0-r0 \
    && rm -rf /var/cache/apk/*

###############################################################################
#Setting
###############################################################################
VOLUME [ "/data/svn" ]
WORKDIR /data/svn
EXPOSE 3690

###############################################################################
#Entrypoint
###############################################################################
CMD [ "/usr/bin/svnserve", "--daemon", "--foreground", "--root", "/data/svn" ]
